<div class="col-md-12">

  <h2 class="text-center"> 我发表过的影评 </h2>

  <table class="table">
    <thead>
      <tr>
        <th> 内容 </th>
        <th> 电影名称 </th>
        <th> 最近更新 </th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td> <%= post.content %> </td>
          <td> <%= post.movie.title %> </td>
          <td> <%= post.updated_at %> </td>
          <td> <%= link_to('Edit', edit_movie_post_path(post.movie, post), class: "btn btn-default btn-xs") %></td>
          <td> <%= link_to('Delete', movie_post_path(post.movie, post), method: :delete, data: { confirm: "确定要删除吗？" }, class: "btn btn-default btn-xs") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
